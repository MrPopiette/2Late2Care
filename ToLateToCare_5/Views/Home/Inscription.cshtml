
@{
    ViewBag.Title = "Inscription";
}

@using (Html.BeginForm("AjoutUtilisateur", "Home", FormMethod.Post, new { @class = "form" }))
{

    @Html.ValidationSummary(true);
    @Html.AntiForgeryToken();

    <h2>Inscription</h2>
    <form action="@Html.ActionLink("Accueil", "AjoutUtilisateur", "Home")">
        <p>Nom :</p>
        <input required type="text" name="nom" placeholder=" Fairronierre " />
        <p>Prénom :</p>
        <input required type="text" name="prenom" placeholder=" Allan " />
        <p>Email :</p>
        <input required type="text" name="email" placeholder=" Alan.Fairronierre@potit.chat " />
        <p>Mot de passe :</p>
        <input required type="password" name="mdp" />
        <p>Promo :</p>
        <input required type="number" min="1" max="5" name="INTpromo_id" placeholder="1/2/3/4/5" />

        <input class="btn btn-primary btn-lg" type="submit" value="Soumettre">
    </form>
    <p><a href="/Home/Login">Se connecter &raquo;</a></p>
}
